
{% extends '::LayoutBack.html.twig' %}
{% block title %}
    Recherche èvenement
{% endblock title %}

{% block body %}


    <div align="center">
        <div id="page-wrapper" >

            <div class="row" >
                <h1 align="center "style="color: red" > <strong>Chercher une èvenement</strong> </h1>

                <form method="post">
                    nom de l'evenement <input type="text" name="nom"/>
                    <input type="submit" value="rechercher">
                </form>
                {% for e in evenement %}

                    <div class="col-md-4 col-sm-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <p align="left">  <img src="{{ asset('image_evenement/' ~ e.user.image) }}" style="   border: 1px black solid;
    border-radius: 50%;
    width: 75px;
    height: 75px;
    background:  200px;">   {{ e.user.nom }}</p>
                            </div>
                            <div class="panel-body">
                                <img src="{{ asset('image_evenement/' ~ e.image) }}" alt=""  width="100%" height="200px">
                                <p align="center" style="color: red"><strong >{{ e.nom }}</strong></p>
                                <div align="center"><p style="color: #00abef" >du </p>{{ e.dateDebut |date('d-m-y') }} <p style="color: #00abef" >jusqu'a</p> {{ e.dateFin|date('d-m-y') }}</div>
                                <p><p style="color: #00abef" >description :</p>{{ e.description }}</p>
                            </div>
                            <div class="panel-footer">

                                {% if e.etat==0  %}
                                    <div align="center">
                                        <form action=" {{ path('membre_evenement_back',{'id':e.id_evenement }) }}  " method="post" >
                                            <button type="submit" class="btn btn-warning btn-lg "><span class="glyphicon glyphicon-zoom-in"></span>Voir membres</button>

                                        </form>
                                        <form action=" {{ path('supprimer_evenement_back',{'id':e.id_evenement }) }}  " method="post" >
                                            <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>annuler </button>
                                        </form>

                                    </div>
                                {% else %}
                                    <p align="center"><strong>èvenement annulè</strong></p>
                                    <br>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>






{% endblock body %}