{% extends '::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Recherche Enfant avec nom&Prenom{% endblock title %}
{% block topline %}{% endblock topline %}

{%  block main %}
<div class="canvas">
    <div>  <h1 class="grand-hotel text-center" style="color: tomato"> Rechercher par Nom & Prenom de l'enfant </h1>
    </div>
    <section class="service-calc padding-v100">
        <div class="container">
            <div class="col-sm-12 padding-g0">
                <div class="col-xs-12">


<form method="post" class="form-wrap">
<table align="center">
    <tr> <td>    <input type="text" name="nom" placeholder="Nom & prénom " style="height: 60px;width: 600px"></td> <td>
   <button class="rt-icon2-zoom-outline" type="submit" name="submit" value="Recherche " width="100px" style="height: 60px;width: 100px"></button></td>
    </tr>
</table>

<br>
    <br>


    <table class="courses-table table1">
        <tr>
            <th>Nom de l'enfant :</th>
            <th>Prénom de l'enfant :</th>
            <th> Date de Naissance :</th>
            <th> Catégorie  :</th>
            <th> Photo </th>

        </tr>
        {% for Enfant in Enfant %}
            <tr>
                <td>{{ Enfant.nom }} </td>
                <td>{{ Enfant.prenom}}</td>
                <td>{{ Enfant.dateNaissance|date('d/m/Y')}}</td>
                <td>{{ Enfant.categorie }}</td>
                <td><img src="{{ asset('images/') }}{{ Enfant.nomImage }}" style="width: 60px;height: 60px"></td>

            </tr>
        {% endfor %}
    </table>
    </form>





                    </div>
                </div>
            </div>

    </section>
</div>

{%  endblock main %}
{% block footer %}
{% endblock footer %}
