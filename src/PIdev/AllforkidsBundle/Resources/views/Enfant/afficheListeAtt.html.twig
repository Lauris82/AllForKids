{% extends '::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

    {% block title %}affiche Liste Attente{% endblock title %}
{% block topline %}{% endblock topline %}

{%  block main %}

<div class="canvas">


    <div>  <h1 class="grand-hotel text-center" style="color: tomato">Liste d'attente des Enfants de notre garderie </h1>
        </div>
    <section class="service-calc padding-v100">
        <div class="container">
            <div class="col-sm-12 padding-g0">
                <div class="col-xs-12">
                    <div class="form-wrap">

                        <table class="courses-table table1">
                            <tr>
                                <th>Nom de l'enfant :</th>
                                <th>Prenom de l'enfant :</th>
                                <th> Date de Naissance :</th>
                                <th> Date de Reservation :</th>
                                <th> Supprimer:</th>
                            </tr>
                            {% for ListeAtt in ListeAtt %}
                            <tr>
                                <td>{{ ListeAtt.nomEnfant }}</td>
                                <td>{{ ListeAtt.prenom }}</td>
                                <td>{{ ListeAtt.dateNaiss|date('d/m/Y') }}</td>
                                <td>{{ ListeAtt.date|date('d/m/Y') }}</td>
                                <td><a href="{{path ('SupprimerDeListe',{'id':ListeAtt.idListe})  }}" class="rt-icon2-times-outline pink"></a></td>
                            </tr>
                            {% endfor %}
                        </table>






                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

{%  endblock main %}
{% block footer %}
{% endblock footer %}
