
{% extends '::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}MAJ Garderie{% endblock title %}
{% block topline %}{% endblock topline %}

{%  block main %}
<div class="canvas">


    <h1 class="grand-hotel text-center" style="color:chocolate"> Formulaire de Modification de Garderie </h1>
    <section class="service-calc padding-v100">
        <div class="container">
            <div class="col-sm-12 padding-g0">
                <div class="col-xs-12">
                    <div class="form-wrap">
                        <div >
                            {{ form_start(form,{'class': "contact-form" }) }}
                            <table>
                    <tr>
                        <td class="grand-hotel" style="color: #f5abcb">Nom :</td>
                        <td>{{ form_widget (form.nom, { 'attr': {'class': "form-control",'placeholder': 'nom'|trans} }) }}</td>
                    </tr>
                    <tr>
                        <td class="grand-hotel"style="color: #00bcd5">Emplacement :</td>
                        <td>{{ form_widget(form.emplacement, { 'attr': {'class': "form-control",'placeholder': 'emplacement'|trans} }) }}</td>
                    </tr>

                    <tr>
                        <td class="grand-hotel" style="color: rosybrown">Capacit√© :</td>
                        <td>{{ form_widget (form.capacite, { 'attr': {'class': "form-control",'placeholder': 'capacite'|trans} }) }}</td>
                    </tr>
                    <tr>
                        <td class="grand-hotel" style="color: mediumturquoise" >Description :</td>
                        <td>{{ form_widget(form.description, { 'attr': {'class': "form-control",'placeholder': 'description'|trans} }) }}</td>
                    </tr>
                    <tr>
                        <td class="grand-hotel" style="color: mediumvioletred">Num Tel :</td>
                        <td>{{ form_widget (form.numTel, { 'attr': {'class': "form-control",'placeholder': 'numTel'|trans} }) }}</td>
                    </tr>
                    <tr>
                        <td class="grand-hotel" style="color: lime">Image : </td>

                        <td>{{ form_widget(form.file) }}</td>
                    </tr>
                            </table>
                     <div align="Right">{{ form_widget(form.Ajouter,{'attr':{'class':"btn-type1"}}) }}</div>

                {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div></section>
</div>
    {% endblock main %}
