{% extends '::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block title %}Changer Mot de passe{% endblock title %}
{% block topline %}{% endblock topline %}

{% block section %}
    <h3>Changer Mot de passe</h3>
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('fos_user_profile_show') }}">Profil</a>
        </li>
        <li>
            <a href="{{ path('fos_user_profile_edit') }}">Modifier votre Profil</a>
        </li>
        <li>
            <a href="{{ path('fos_user_change_password') }}">Changer Mot de passe</a>
        </li>
    </ol>
{% endblock section %}

{% block main %}
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
    {{ form_end(form) }}
{% endblock main %}


{% block footer %}

{% endblock footer %}